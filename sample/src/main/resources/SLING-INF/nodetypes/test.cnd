<sling = 'http://jackrabbit.apache.org/sling/1.0'>
<nt  = 'http://www.jcp.org/jcr/nt/1.0'>

// Node type for the SampleContent objects
[sling:SampleContent] > sling:Content

  - 'title' (String)
    copy

  - 'text' (String)
    copy

// Node type for the SamplePage objects
[sling:SamplePage] > sling:Content

  // The page title
  - 'title' (String)
    copy

  // The contents of the page
  + 'content' (nt:base)
    copy