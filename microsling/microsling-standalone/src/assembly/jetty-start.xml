<!-- 
  Config file for the maven-assembly-plugin, creates a zip
  file with all that's needed to run microsling standalone
  using the Jetty start.jar.
 -->
 
<assembly>
  <id>jetty-start</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>

  <files>
    <file>
      <source>LICENSE</source>
    </file>
    <file>
      <source>NOTICE</source>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <directory>src/jetty-start-config</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.apache.sling:microsling-core:war</include>
      </includes>
      <outputDirectory>webapps</outputDirectory>
      <outputFileNameMapping>ROOT.war</outputFileNameMapping>
    </dependencySet>
  </dependencySets>

</assembly>