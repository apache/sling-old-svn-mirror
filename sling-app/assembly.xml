<assembly>
	<id>assembly</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
		<format>tar.bz2</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>sling-${version}</baseDirectory>

	<fileSets>
		<fileSet>
			<directory>src/main/dist/unix</directory>
			<outputDirectory>/</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0744</fileMode>
			<excludes>
				<exclude>serverctl</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/dist/bin</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/dist/unix/serverctl</source>
			<outputDirectory>/</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>0744</fileMode>
			<filtered>true</filtered>
		</file>
		<file>
			<source>src/main/dist/dos/server.bat</source>
			<outputDirectory>/</outputDirectory>
			<lineEnding>dos</lineEnding>
			<filtered>true</filtered>
		</file>
	</files>
</assembly>
